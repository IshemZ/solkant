{
  "name": "solkant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run clean:cache && NODE_OPTIONS='--no-deprecation' prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "postbuild": "next-sitemap",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:hydration": "vitest run tests/lib/date-utils.test.ts tests/components/hydration.test.tsx tests/components/loading-states.test.tsx",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:multi-tenant": "vitest run tests/multi-tenant/",
    "test:all": "npm run test:run && npm run test:e2e",
    "a11y:audit": "echo 'Install pa11y-ci: npm install -D pa11y-ci' && echo 'Run: npm run dev & sleep 5 && npx pa11y-ci'",
    "env:check": "tsx scripts/check-env.ts",
    "env:template": "tsx scripts/generate-env-template.ts",
    "clean:cache": "rm -rf .next && echo '✅ Cache Next.js supprimé'",
    "clean:all": "rm -rf .next node_modules/.cache && echo '✅ Tous les caches supprimés'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/third-parties": "^16.0.7",
    "@prisma/client": "6.19.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@react-pdf/renderer": "^4.3.1",
    "@sentry/nextjs": "^10.29.0",
    "@stripe/stripe-js": "^8.5.3",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.7",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "next": "^16.0.7",
    "next-auth": "^4.24.13",
    "next-sitemap": "^4.2.3",
    "prisma": "6.19.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "resend": "^6.5.2",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.7",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.16.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.15",
    "baseline-browser-mapping": "^2.9.3",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "happy-dom": "^20.0.11",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
